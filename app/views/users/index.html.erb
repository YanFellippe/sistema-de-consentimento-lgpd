<style>
  body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; margin: 1rem; background: #f9f9f9; }
  h1 { color: #333; font-size: 1.75rem; }
  .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap; }
  .btn { padding: 0.6rem 1rem; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; text-decoration: none; display: inline-block; white-space: nowrap; font-size: 0.95rem; }
  .btn-primary { background: #007bff; color: white; }
  .btn-primary:hover { background: #0056b3; }
  .users-list { background: #fff; border: 1px solid #ddd; border-radius: 8px; padding: 1rem; }
  .user-item { padding: 1rem; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; align-items: center; gap: 1rem; flex-wrap: wrap; }
  .user-item:last-child { border-bottom: none; }
  .user-info { flex: 1; min-width: 200px; }
  .user-info h3 { margin: 0 0 0.25rem 0; font-size: 1.1rem; }
  .user-info p { margin: 0; color: #666; font-size: 0.9rem; word-break: break-word; }
  .btn-small { padding: 0.5rem 1rem; font-size: 0.9rem; }
  .empty-state { text-align: center; padding: 3rem 1rem; color: #999; }
  
  @media (max-width: 768px) {
    body { margin: 0.5rem; }
    h1 { font-size: 1.5rem; }
    .header { flex-direction: row; align-items: center; }
    .users-list { padding: 0.75rem; }
    .user-item { flex-direction: row; align-items: center; padding: 0.75rem; gap: 0.75rem; }
    .user-info { min-width: 0; flex: 1; }
    .btn-small { width: auto; margin-top: 0; flex-shrink: 0; font-size: 0.85rem; padding: 0.4rem 0.75rem; white-space: nowrap; }
  }
  
  @media (max-width: 480px) {
    h1 { font-size: 1.25rem; }
    .header { gap: 0.5rem; }
    .btn { padding: 0.5rem 0.75rem; font-size: 0.85rem; }
    .user-info h3 { font-size: 1rem; }
    .user-info p { font-size: 0.85rem; }
    .user-item { gap: 0.5rem; }
    .btn-small { font-size: 0.8rem; padding: 0.35rem 0.6rem; }
  }
</style>

<div class="header">
  <h1>Usuários Cadastrados</h1>
  <%= link_to "Novo Usuário", new_user_path, class: "btn btn-primary" %>
</div>

<div class="users-list">
  <% if @users.any? %>
    <% @users.each do |user| %>
      <div class="user-item">
        <div class="user-info">
          <h3><%= user.name %></h3>
          <p><%= user.email %></p>
        </div>
        <%= link_to "Gerenciar Consentimentos", user_path(user), class: "btn btn-primary btn-small" %>
      </div>
    <% end %>
  <% else %>
    <div class="empty-state">
      <p>Nenhum usuário cadastrado ainda.</p>
    </div>
  <% end %>
</div>
