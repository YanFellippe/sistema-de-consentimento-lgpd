<style>
  body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; margin: 1rem; background: #f9f9f9; }
  h1 { color: #333; font-size: 1.75rem; }
  .form-container { background: #fff; border: 1px solid #ddd; border-radius: 8px; padding: 1.5rem; max-width: 600px; margin: 0 auto; }
  .form-group { margin-bottom: 1.5rem; }
  .form-group label { display: block; margin-bottom: 0.5rem; font-weight: bold; color: #333; }
  .form-group input { width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 5px; font-size: 1rem; box-sizing: border-box; }
  .form-group input:focus { outline: none; border-color: #007bff; }
  .btn { padding: 0.5rem 1rem; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; text-decoration: none; display: inline-block; font-size: 1rem; text-align: center; }
  .btn-primary { background: #007bff; color: white; }
  .btn-primary:hover { background: #0056b3; }
  .btn-secondary { background: #6c757d; color: white; margin-left: 0.5rem; }
  .btn-secondary:hover { background: #545b62; }
  .error-messages { background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 1rem; border-radius: 5px; margin-bottom: 1.5rem; }
  .error-messages ul { margin: 0; padding-left: 1.5rem; }
  .button-group { display: flex; gap: 0.5rem; flex-wrap: wrap; }
  
  @media (max-width: 768px) {
    body { margin: 0.5rem; }
    h1 { font-size: 1.5rem; }
    .form-container { padding: 1rem; }
    .button-group { flex-direction: row; }
    .btn { flex: 1; margin-left: 0 !important; }
    .btn-secondary { margin-left: 0.5rem !important; }
  }
  
  @media (max-width: 480px) {
    h1 { font-size: 1.25rem; }
    .form-group input { font-size: 0.9rem; padding: 0.6rem; }
    .error-messages { font-size: 0.9rem; padding: 0.75rem; }
  }
</style>

<h1>Novo Usuário</h1>

<div class="form-container">
  <% if @user.errors.any? %>
    <div class="error-messages">
      <strong>Erro ao criar usuário:</strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, placeholder: "Digite o nome completo" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, placeholder: "Digite o e-mail" %>
    </div>

    <div class="button-group">
      <%= f.submit "Criar Usuário", class: "btn btn-primary" %>
      <%= link_to "Cancelar", users_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
